<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:fitsSystemWindows="true"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:background="@drawable/signup"

                />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/contactbar"
            android:background="@drawable/bar"
            android:elevation="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:fontFamily="@font/robotoreglar"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit4"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="159dp"
        android:layout_marginTop="447dp"
        android:elevation="5dp"
        app:SpinKit_Color="#d02220" />

    <EditText
        android:id="@+id/conusernameedtText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/robotoreglar"
        android:hint="Username"
        android:outlineProvider="none"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/conemailedtText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@+id/conusernameedtText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/robotoreglar"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:outlineProvider="none"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/conphoneeedtText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@+id/conemailedtText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/robotoreglar"
        android:hint="Phone"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/consubjectedtText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@+id/conphoneeedtText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/robotoreglar"
        android:hint="Subject"
        android:inputType="textEmailAddress"

        android:textSize="20sp" />

    <EditText
        android:id="@+id/conmessageedtText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@+id/consubjectedtText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/robotoreglar"
        android:hint="Message"
        android:inputType="textLongMessage"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sendmessage"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@+id/conmessageedtText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/submit_btn"
        android:fontFamily="@font/robotoreglar"
        android:text="SENd MESSAGE"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    </RelativeLayout>
    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/contact_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/drawerbck"
        android:elevation="5dp"
        app:headerLayout="@layout/contactfooter" />
</android.support.v4.widget.DrawerLayout>