<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:background="@drawable/home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:id="@+id/navdrawerhome"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/robotoreglar"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/reviews"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="REVIEWS"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/navdrawerreview"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/robotoreglar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bonuses"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="BONUSES"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/navdrawerbonuses"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/robotoreglar"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/contactusp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="CONTACT US"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/navdrawercontactus"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/robotoreglar"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="260dp"
      >

<View
    android:layout_width="270dp"
    android:layout_height="1dp"

    android:layout_marginTop="20dp"
    android:background="#ffffff"

    />
    <TextView
        android:id="@+id/logout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoreglar"
        android:text="LOG OUT"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout1"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoreglar"
        android:text="Pankaj Rawat"
        android:textColor="#E6E6E6"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/poker"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>